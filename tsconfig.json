{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "noEmit": true,
    "maxNodeModuleJsDepth": 5,
    "downlevelIteration": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    }
  },
  "files": [
    "./references.d.ts",
    "./src/solid-native-jsx.ts",
    "./src/nativescript-jsx.ts"
  ],
  "include": ["./src/**/*.tsx?", "./src/**/*.jsx?"],
  "exclude": ["node_modules", "platforms"]
}
